{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "types": ["node", "./src/types/express"]
  },
  "include": ["*.ts", "src/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "build"]
}
